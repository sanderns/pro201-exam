    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "parcel": "^2.5.0",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "react-test-renderer": "^18.1.0",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "@parcel/transformer-react-refresh-wrap": "^2.5.0",
    "jest": "^28.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-responsive": "^9.0.0-beta.8",
    "react-router-dom": "^6.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
